@model IQueryable<Director>

@{
    ViewData["Title"] = "Director's Index";
}


<table class="table">
    <thead>
        <tr>
            <th>     
                <h3>@typeof(Director).Name</h3> @*we get the name of the table from the very same model*@
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var director in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@director.DirectorTableId">@Html.DisplayFor(modelItem => director.DirectorName)</a>
                </td>
            </tr>
        }
    </tbody>
</table>